<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/White"
             tools:context=".UI.Fragment.Category.DeliveryListFragment">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightBlueGrey"/>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/giftcon"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="선물하기"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>

                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/emoticon"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="이모티콘"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>


                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hairshop"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="헤어샵"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>


                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/makers"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="메이커스"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">




                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/friendshop"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="프렌즈샵"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>

                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/shopping"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="쇼핑하기"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>


                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/style"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="스타일"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>


                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/order"
                            android:layout_centerHorizontal="true"
                            android:lineSpacingExtra="6sp"
                            android:text="주문하기"
                            android:textColor="#0a0a0a"
                            android:textSize="11sp" />

                </RelativeLayout>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

        </LinearLayout>

    </LinearLayout>



    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp">

        <TextView
                android:id="@+id/tv_fg_delivery_list_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#000000"
                android:lineSpacingExtra="5sp"
                tools:text="12"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/tv_fg_delivery_list_num"
                android:lineSpacingExtra="5sp"
                tools:text="개의 상품"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="end"
                android:layout_toLeftOf="@+id/btn_fg_delivery_list_filter"
                android:text="인기순"/>


        <Button
                android:id="@+id/btn_fg_delivery_list_filter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:background="@drawable/dropdown_icon"/>


    </RelativeLayout>



        

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>