<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38333333"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".UI.Activity.Cart.PopupCartDayActivity">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="248dp"
                android:layout_height="212dp">

            <LinearLayout
                    android:id="@+id/edit_rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ff7400"
                            android:gravity="center"
                            android:text="수량 선택"
                            android:textColor="#ffffff"
                            android:textSize="15sp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/x_icon"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_onemonth"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_one"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="1달에 한 번"
                            android:textColor="#212529"
                            android:textSize="14sp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_two"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="2달에 한 번"
                            android:textColor="#212529"
                            android:textSize="14sp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_three"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="3달에 한 번"
                            android:textColor="#212529"
                            android:textSize="14sp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_four"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="4달에 한 번"
                            android:textColor="#212529"
                            android:textSize="14sp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

