<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.SignupCartActivity"
        android:theme="@style/AppTheme">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/White"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문과 동시에 회원가입"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="#212529"
                    android:id="@+id/toolbar_title"/>
            <ImageView
                    android:id="@+id/ic_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/back_icon"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
            android:background="@color/lightBlueGrey"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_height="1dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:src="@drawable/signup_cart"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="116dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="11dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="수령인"/>
            <EditText
                    android:id="@+id/edtCartName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="11dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="연락처"/>
            <EditText
                    android:id="@+id/edtCartNum1"
                    android:paddingLeft="10dp"
                    android:layout_width="83.5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="8dp"/>
            <View
                    android:layout_width="13dp"
                    android:layout_height="2dp"
                    android:background="#a5a5a5"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center_horizontal|center_vertical"
            />
            <EditText
                    android:id="@+id/edtCartNum2"
                    android:paddingLeft="10dp"
                    android:layout_width="83.5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            <View
                    android:layout_width="13dp"
                    android:layout_height="2dp"
                    android:background="#a5a5a5"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center_horizontal|center_vertical"
            />
            <EditText
                    android:id="@+id/edtCartNum3"
                    android:paddingLeft="10dp"
                    android:layout_width="83.5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="11dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="배송지"/>
            <EditText
                    android:id="@+id/edtAddressNum"
                    android:paddingLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="24dp"/>
            <Button
                    android:id="@+id/btn_ac_cartif_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="10dp"
                    android:text="우편번호 검색"
                    android:textColor="@color/pumpkinOrange"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="11dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="배송지"
                    android:visibility="invisible"/>
            <EditText
                    android:id="@+id/edtAddress"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="24dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="11dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="배송지"
                    android:visibility="invisible"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/blueGrey"
                    android:textSize="13sp"
                    android:hint="상세 주소를 입력해주세요."/>
        </LinearLayout>
        //배송 메모
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="11dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="배송 메모"/>
            <Button
                    android:id="@+id/btnLogindelivery"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_ground"
                    android:layout_marginLeft="7dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/darkGrey"
                    android:textSize="13sp"
                    android:hint="배송시 요청사항을 선택해주세요"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btn_ac_signup_nextcom"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="3sp"
                android:text="이미 가입하셨나요?"/>
        <TextView
                android:id="@+id/btn_ac_signupup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/pumpkinOrange"
                android:lineSpacingExtra="3sp"
                android:text="로그인하기"/>
    </LinearLayout>
    <Button
            android:id="@+id/btn_ac_signup_nextcom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/White"
            android:layout_alignParentBottom="true"
            android:background="@color/blueGrey"
            android:text="가입 완료"/>
</RelativeLayout>