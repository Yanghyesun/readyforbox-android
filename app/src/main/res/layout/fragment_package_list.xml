<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/White"
             tools:context=".UI.Fragment.Category.DeliveryListFragment">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/White"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">



        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="#212529"
                    android:id="@+id/toolbar_title"/>


            <ImageView
                    android:id="@+id/ic_toolbar_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cart_icon"/>
        </RelativeLayout>



    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>


            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_area"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_package_list_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="공간확보의 달인"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_package_list_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="포근하게 자기"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>


        </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightBlueGrey"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>
            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_appliances"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_package_list_appliances"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="가전제품"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_dress"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

            <TextView
                    android:id="@+id/tv_fg_package_list_dress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:lineSpacingExtra="6sp"
                    android:text="입는건 중요해"
                    android:layout_weight="1"
                   android:layout_centerInParent="true"
                    android:textColor="@color/darkGrey"
                    android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>




        </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightBlueGrey"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_manage"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_package_list_manage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="우리 집 관리"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_animal"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_package_list_animal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="반려동물과 함께"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>


        </LinearLayout>


            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightBlueGrey"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_homecafe"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_pakcage_list_homecafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="홈카페"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>

            <RelativeLayout
                    android:id="@+id/btn_fg_package_list_special"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                <TextView
                        android:id="@+id/tv_fg_package_list_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="6sp"
                        android:text="특별기획"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="10sp" />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlueGrey"/>


        </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp">

        <TextView
                android:id="@+id/tv_fg_delivery_list_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#000000"
                android:lineSpacingExtra="5sp"
                android:text="12"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/tv_fg_delivery_list_num"
                android:lineSpacingExtra="5sp"
                android:text="개의 상품"/>


        <TextView
                android:id="@+id/tv_fg_package_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="end"
                android:layout_toLeftOf="@+id/btn_fg_package_list_filter"
                android:text="최신순"/>


        <Button
                android:id="@+id/btn_fg_package_list_filter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:background="@drawable/dropdown_icon"/>


    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fg_package_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </LinearLayout>




    </android.support.v4.widget.NestedScrollView>



</LinearLayout>