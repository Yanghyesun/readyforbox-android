<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:layout_marginTop="11dp"
    android:elevation="15dp"
    android:background="@drawable/round_border"
    app:behavior_peekHeight="280dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품 수량"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/charcoalGrey"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/img_minus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:srcCompat="@drawable/minus_icon" />
                <TextView
                    android:id="@+id/txt_product_count"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/charcoalGrey"
                    android:background="@drawable/cb_grey_button"
                    android:layout_marginHorizontal="-1dp"
                    android:paddingVertical="2dp"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/img_plus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:srcCompat="@drawable/plus_icon" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000원"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/darkGrey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송 주기"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/charcoalGrey"/>
        <com.yuxingxin.library.MultiRadioGroup
            android:id="@+id/multi_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/rg_product_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_one_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1달에 한 번"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="56dp"
                    android:textColor="@color/pumpkinOrange"
                    android:button="@android:color/transparent"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/rb_two_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2달에 한 번"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="56dp"
                    android:textColor="@color/darkGrey"
                    android:button="@android:color/transparent"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/rg_product_delivery2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_three_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3달에 한 번"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="56dp"
                    android:textColor="@color/darkGrey"
                    android:button="@android:color/transparent"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/rb_four_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4달에 한 번"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="56dp"
                    android:textColor="@color/darkGrey"
                    android:button="@android:color/transparent"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </RadioGroup>
        </com.yuxingxin.library.MultiRadioGroup>
        <Button
            android:id="@+id/btn_product_addCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장바구니 담기"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/orange_border_fill"/>
    </LinearLayout>

</LinearLayout>