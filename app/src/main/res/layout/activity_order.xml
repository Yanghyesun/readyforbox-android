                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#ffffff"
                        android:weightSum="10">
                    <TextView android:layout_width="0dp"
                              android:layout_weight="2"
                              android:layout_height="wrap_content"
