<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/light_grey_stroke"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/rl_fg_category_package_layout">


    <RelativeLayout
            android:id="@+id/rl_fg_category_package_img"
            android:layout_width="180dp"
            android:layout_height="92dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/grey_stroke">


    <ImageView
            android:id="@+id/iv_item_ac_my_page_delivery_check_product"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_centerInParent="true"
            android:src="@drawable/delivery_btn_1"/>
    </RelativeLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="29dp"
            android:layout_toRightOf="@+id/rl_fg_category_package_img"
            android:orientation="vertical">


        <TextView
                android:id="@+id/tv_ac_my_page_delivery_check_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000000"
                android:lineSpacingExtra="5sp"
                android:text="플레이팅 완벽하게 끝내기" />



        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_term_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:gravity="center_horizontal"
                   android:text="배송주기 : " />

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_term_title"
                    android:layout_marginLeft="1dp"
                    android:lineSpacingExtra="4sp"
                    android:text="1" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_term"
                    android:layout_marginLeft="1dp"
                    android:lineSpacingExtra="4sp"
                    android:text="달" />



        </RelativeLayout>



        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:gravity="center_horizontal"
                    android:text="배송날짜 : 매달" />

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_date_title"
                    android:layout_marginLeft="1dp"
                    android:lineSpacingExtra="4sp"
                    android:text="3" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_date"
                    android:layout_marginLeft="1dp"
                    android:lineSpacingExtra="4sp"
                    android:text="일" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>