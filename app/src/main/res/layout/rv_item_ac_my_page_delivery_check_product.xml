<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/light_grey_stroke"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rl_fg_category_package_layout">




    <ImageView
            android:id="@+id/iv_item_ac_my_page_delivery_check_product"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/delivery_btn_1"/>




    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="29dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/blueGrey"
            android:gravity="center_horizontal"
            android:text="수량"/>


    <TextView
            android:id="@+id/tv_ac_my_page_delivery_check_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/blueGrey"
            android:gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:text="1"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/li_ac_my_page_delivery_check_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_toRightOf="@+id/iv_item_ac_my_page_delivery_check_product"
            android:orientation="vertical">


        <TextView
                android:id="@+id/tv_ac_my_page_delivery_check_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="플레이팅 완벽하게 끝내기" />




        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_term_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:gravity="center_horizontal"
                   android:text="배송주기 : " />

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_term_title"
                    android:layout_marginLeft="1dp"
                    android:text="1" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_term"
                    android:layout_marginLeft="1dp"
                    android:text="달" />



        </RelativeLayout>



        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:gravity="center_horizontal"
                    android:text="배송날짜 : 매달" />

            <TextView
                    android:id="@+id/tv_ac_my_page_delivery_check_product_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_date_title"
                    android:layout_marginLeft="1dp"
                    android:text="3" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/darkGrey"
                    android:layout_toRightOf="@+id/tv_ac_my_page_delivery_check_product_date"
                    android:layout_marginLeft="1dp"
                    android:text="일" />

        </RelativeLayout>

    </LinearLayout>
    
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/iv_item_ac_my_page_delivery_check_product"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_orange_fill"
            android:layout_marginBottom="26dp"
            android:layout_marginRight="13dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="상품정보 변경하기"/>

    </RelativeLayout>
    
    
    


</RelativeLayout>