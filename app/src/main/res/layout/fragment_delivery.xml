<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/fl_delivery_main"
             android:background="@color/White"
             tools:context=".UI.Fragment.Category.DeliveryFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp">
                <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_water"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/iv_water"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_water"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_water"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="생수/음료"
                                android:textColor="@color/darkGrey"
                                android:textSize="10sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_detergent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/detergent"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/delivery_btn_2"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_detergent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/detergent"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="세제/섬유유연제"
                                android:textColor="@color/darkGrey"
                                android:textSize="10sp"/>

                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_bathroom"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/hairshop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_3"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_bathroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hairshop"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="욕실용품"
                                android:textColor="#0a0a0a"
                                android:textSize="10sp"/>

                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_tissue"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:id="@+id/makers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/delivery_btn_4"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_tissue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/makers"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="휴지/물티슈"
                                android:textColor="#0a0a0a"
                                android:textSize="10sp"/>

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_clean"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:id="@+id/friendshop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_5"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="26dp"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_clean"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/friendshop"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="청소용품"
                                android:textColor="#0a0a0a"
                                android:textSize="10sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_cook"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/shopping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_6"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_cook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/shopping"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="주방용품"
                                android:textColor="#0a0a0a"
                                android:textSize="10sp"/>

                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_defuser"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_7"
                                android:layout_alignParentTop="true"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_defuser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/style"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="디퓨저/방향제"
                                android:textColor="#0a0a0a"
                                android:textSize="10sp"/>

                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/btn_fg_delivery_animal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_8"/>

                        <TextView
                                android:fontFamily="@font/medium"
                                android:id="@+id/tv_fg_delivery_animal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/order"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="반려동물용품"
                                android:textColor="#0a0a0a"
                                android:textSize="10sp"/>

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/verylightPink"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">


                <TextView
                        android:fontFamily="@font/semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/darkGrey"
                        android:textStyle="bold"
                        android:text="준비해박스 추천 PICK!"/>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:src="@drawable/recommend_btn_1"/>


                        <TextView
                                android:fontFamily="@font/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/darkGrey"
                                android:letterSpacing="-0.02"
                                android:layout_marginTop="6dp"
                                android:text="네이비 면수건 6개입"/>


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_2"/>


                        <TextView
                                android:fontFamily="@font/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/darkGrey"
                                android:layout_marginTop="6dp"
                                android:text="이노카 식기건조대 2단"/>


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_3"/>


                        <TextView
                                android:fontFamily="@font/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/darkGrey"
                                android:layout_marginTop="6dp"
                                android:text="클래식 원목 3단 협탁"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/verylightPink"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">


                <TextView
                        android:fontFamily="@font/semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/darkGrey"
                        android:textStyle="bold"
                        android:text="세일 상품"/>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/sale_btn_1"/>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">


                            <TextView
                                    android:fontFamily="@font/semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/pumpkinOrange"
                                    android:lineSpacingExtra="4sp"
                                    android:text="20%"/>


                            <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="아이홈 다용도 접이.."/>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/sale_btn_2"/>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                            <TextView
                                    android:fontFamily="@font/semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/pumpkinOrange"
                                    android:lineSpacingExtra="4sp"
                                    tools:text="20%"/>


                            <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="원터치 특대형 모기.."/>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/sale_btn_3"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">


                            <TextView
                                    android:fontFamily="@font/semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/pumpkinOrange"
                                    android:lineSpacingExtra="4sp"
                                    android:text="10%"/>


                            <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="3단 원목 수납장"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>