<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".UI.Fragment.Category.DeliveryFragment">


    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/giftcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/giftcon"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="선물하기"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/emoticon"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/emoticon"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="이모티콘"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>


                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/hairshop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hairshop"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="헤어샵"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>


                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/makers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/makers"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="메이커스"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/friendshop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/friendshop"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="프렌즈샵"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/shopping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/shopping"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="쇼핑하기"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>


                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/style"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="스타일"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>


                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_btn_1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/order"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="6sp"
                                android:text="주문하기"
                                android:textColor="#0a0a0a"
                                android:textSize="11sp" />

                    </RelativeLayout>


                </LinearLayout>







            </LinearLayout>









            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/veryㅣightPink"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/darkGrey"
                        android:textStyle="bold"
                        android:text="준비해박스 추천 PICK!"/>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:src="@drawable/recommend_btn_1"/>


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/darkGrey"
                                android:letterSpacing="-0.02"
                                android:layout_marginTop="6dp"
                                android:text="제품명제품명제품명제품" />



                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_1"/>


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/darkGrey"
                                android:layout_marginTop="6dp"
                                android:text="제품명제품명제품명제품" />



                    </LinearLayout>



                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_1"/>


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/darkGrey"
                                android:layout_marginTop="6dp"
                                android:text="제품명제품명제품명제품" />



                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/veryㅣightPink"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/darkGrey"
                        android:textStyle="bold"
                        android:text="세일 상품"/>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_1"/>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/pumpkinOrange"
                                    android:lineSpacingExtra="4sp"
                                    android:text="20%"/>


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="제품명제품" />

                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_1"/>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/pumpkinOrange"
                                    android:lineSpacingExtra="4sp"
                                    tools:text="20%"/>


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="제품명제" />

                        </LinearLayout>



                    </LinearLayout>



                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/recommend_btn_1"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/pumpkinOrange"
                                    android:lineSpacingExtra="4sp"
                                    android:text="20%"/>


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="제품명제품" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>