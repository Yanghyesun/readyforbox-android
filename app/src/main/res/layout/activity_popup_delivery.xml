<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38333333"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".UI.Activity.Sign.PopupDeliveryActivity">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="248dp"
                android:layout_height="252dp">

            <LinearLayout
                    android:id="@+id/edit_rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ff7400"
                            android:gravity="center"
                            android:text="요청사항 변경하기"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/x_icon" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_door"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_door"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="문 앞"
                            android:textColor="#212529"
                            android:textSize="14sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_security_office"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="경비실"
                            android:textColor="#212529"
                            android:textSize="14sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_courier"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="택배함"
                            android:textColor="#212529"
                            android:textSize="14sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_self"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="직접수령"
                            android:textColor="#212529"
                            android:textSize="14sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_other"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="16dp"
                            android:text="기타 (직접입력)"
                            android:textColor="#212529"
                            android:textSize="14sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/check_box_icon" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

