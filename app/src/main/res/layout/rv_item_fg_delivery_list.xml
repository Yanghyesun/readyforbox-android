<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@color/White"
        android:layout_marginHorizontal="16dp">


    <ImageView
            android:id="@+id/iv_item_fg_delivery_list"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/grey_stroke"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/iv_item_fg_delivery_list"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/darkGrey"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4sp"
                android:text="삼다수"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000000"
                android:lineSpacingExtra="5sp"
                android:text="제주삼다수, 500ml,40개입" />



        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="10dp">

            <View
                    android:layout_width="42dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/blueGrey"/>


        <TextView
                android:id="@+id/tv_fg_delivery_list_original_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#868e96"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4sp"
               android:text="11,700" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#868e96"
                    android:layout_toRightOf="@+id/tv_fg_delivery_list_original_cost"
                    android:layout_marginLeft="1dp"
                    android:lineSpacingExtra="4sp"
                    android:text="원" />



        </RelativeLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/darkGrey"
                android:lineSpacingExtra="5sp"
                android:text="10,000원"/>


    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lightBlueGrey"/>

</RelativeLayout>